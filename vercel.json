{
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "agri-weather-web/src/main.jsx",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "agri-weather-web/dist/$1"
    }
  ],
  "installCommand": "npm install --prefix agri-weather-web && pip install -r agri-weather-web/api/requirements.txt"
}